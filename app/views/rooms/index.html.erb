<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>House adress</th>
      <th>Other house details</th>
      <th>Room availability</th>
      <th>Number people in room</th>
      <th>Room cost</th>
      <th>Other room details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.house_adress %></td>
        <td><%= room.other_house_details %></td>
        <td><%= room.room_availability %></td>
        <td><%= room.number_people_in_Room %></td>
        <td><%= room.room_cost %></td>
        <td><%= room.other_room_details %></td>
        <td><%= image_tag room.image.url (:thumb) %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

